<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  Vehicle Type Definitions for Smart Traffic Management System
  
  This file defines various vehicle types with realistic parameters:
  - Standard vehicles (cars, buses, trucks, motorcycles)
  - Emergency vehicles (ambulance, police, fire truck)
  - Special vehicles (auto-rickshaw)
  
  Parameters:
  - accel: maximum acceleration (m/s²)
  - decel: maximum deceleration (m/s²)
  - sigma: driver imperfection (0-1)
  - length: vehicle length (m)
  - minGap: minimum gap to leading vehicle (m)
  - maxSpeed: maximum speed (m/s)
  - speedFactor: speed limit multiplier
  - speedDev: speed deviation
  - guiShape: visual representation in SUMO-GUI
  - vClass: vehicle class for routing/access
-->
<additional xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
            xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/additional_file.xsd">
    
    <!-- ============================================ -->
    <!-- Standard Passenger Vehicles                  -->
    <!-- ============================================ -->
    
    <!-- Standard Car -->
    <vType id="car" 
           accel="2.6" 
           decel="4.5" 
           sigma="0.5" 
           length="4.5" 
           minGap="2.5" 
           maxSpeed="13.89"
           speedFactor="1.0" 
           speedDev="0.1"
           color="1,1,0"
           guiShape="passenger"
           emissionClass="HBEFA3/PC_G_EU4"
           laneChangeModel="LC2013"
           lcStrategic="1.0"
           lcCooperative="1.0"
           lcSpeedGain="1.0"/>
    
    <!-- Compact Car -->
    <vType id="compact_car" 
           accel="2.8" 
